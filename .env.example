# YouTube Shorts Auto-Generator Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# Required API Keys
# ==========================================

# OpenAI API Key
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# YouTube Data API Key
# Get this from: https://console.cloud.google.com/apis/api/youtube.googleapis.com
YOUTUBE_API_KEY=your_youtube_api_key_here

# YouTube OAuth 2.0 Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# YouTube OAuth 2.0 Refresh Token
# Generated during OAuth flow - see documentation
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# ==========================================
# Optional Configuration
# ==========================================

# Video Configuration
VIDEO_DURATION=60
VIDEO_QUALITY=1080p
VIDEO_FORMAT=mp4

# Content Generation Settings
CONTENT_THEME=general
CONTENT_LANGUAGE=en
MAX_CONTENT_LENGTH=500

# Upload Settings
UPLOAD_SCHEDULE="0 12 * * *"  # Daily at 12 PM UTC
AUTO_UPLOAD=true
UPLOAD_PRIVACY=public

# ==========================================
# Development Settings
# ==========================================

# Debug mode
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Test mode (uses test endpoints when available)
TEST_MODE=false

# ==========================================
# Advanced Configuration
# ==========================================

# Rate limiting
API_RATE_LIMIT=10
REQUEST_TIMEOUT=30

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=1

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=3600

# ==========================================
# Notes
# ==========================================
# 
# Security Notes:
# - Never commit this file with real values to version control
# - Use different API keys for development and production
# - Regularly rotate your API keys
# - Monitor API usage for unexpected activity
#
# GitHub Actions:
# - Add these same variables as secrets in your GitHub repository
# - Go to Settings > Secrets and variables > Actions
# - Add each variable as a repository secret
#
# Local Development:
# - Copy this file to .env
# - Fill in your actual API keys and configuration
# - The .env file should be in your .gitignore